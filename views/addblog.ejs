<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Document</title>
</head>

<body>

    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="inputTitle" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" placeholder="Cover Image">
            </div>
            <div class="mb-3">
                <label for="inputTitle" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title">
            </div>
            <div class="mb-3">
                <label for="inputContent" class="form-label">Content</label>
                <textarea class="form-control" id="body" name="body" placeholder="Add your content" style="height: 100px"></textarea>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>
